                        </div>
                        <!--Panel de asignaciones-->
                        <div class="tab-pane p-20" id="asignaciones" role="tabpanel">
                            <!-- Busqueda-->
                            <nav class="navbar navbar-light bg-light justify-content-between">
                                <a class="navbar-brand">Historial de asignaciones</a>
                                <form class="form-inline">
                                    <input class="form-control mr-sm-2" type="search" placeholder="Buscar"
                                        aria-label="Search">
                                    <button class="btn btn-success my-2 my-sm-0 mr-2" type="submit"><i
                                            class="fas fa-search mr-2"></i> Buscar</button>
                                    <button type="button" class="btn waves-effect waves-light btn-info"
                                        data-toggle="modal" data-target="#agregarTarea"><i
                                            class="fas fa-plus mr-2"></i>Agregar Asignación</button>
                                </form>
                            </nav>
                            <!--Asignaciones-->
                            {{#each asignacionesPonente}}
                            <div class="card mt-3"
                                style="border-radius: 10px; box-shadow: 1px 1px 5px rgba(197, 187, 197, 0.808) ">
                                <div class="card-body">

                                    <div class="row">
                                        <div class="col-9">
                                            <h3><i class="fas fa-bookmark mr-2"></i>{{nombreTarea}}</h3>
                                        </div>
                                        <div class="col-3 text-right">
                                            {{#ifEquals estadoTarea "Abierta"}}
                                            <span class="mb-3 label  label-info mr-2">Abierta</span>
                                            {{/ifEquals}}
                                            {{#ifEquals estadoTarea "Cerrada"}}
                                            <span class="mb-3 label  bg-dark mr-2">Cerrada</span>
                                            <span class="small"><a href="/ponente/calificarTarea/"
                                                    class="btn waves-effect waves-light btn-rounded btn-sm btn-warning small">
                                                    <i class="fas fa-check-double mr-2"></i>Calificar</a></span>
                                            {{/ifEquals}}
                                            <span class="small"><a href="#"
                                                    class="btn waves-effect waves-light btn-rounded btn-sm btn-success small"
                                                    data-toggle="modal" data-target="#editarTarea">
                                                    <i class="fas fa-pencil-alt mr-2"></i>Editar</a></span>
                                        </div>
                                        {{#if totalArchivos}}
                                            <div class="col-12">
                                                <h5 class="mt-3">{{descripcionTarea}}</h5>
                                                <h6 class="font-weight-normal mb-3">
                                                    <i class="fas fa-paperclip mr-2"></i>Esta asignación posee 
                                                    <span class="font-weight-bold">({{totalArchivos}})</span> archivos adjuntos:
                                                </h6>
                                                {{#each ../archivosAsignacionesPonente}}
                                                    {{#ifEquals idTarea ../this.idTarea}}
                                                    <h6>
                                                        <a href="/ponente/DescargarTareaCurso/{{idTarea}}/{{archivoNombre}}/" >
                                                            <i class="fas fa-download mr-2"></i>{{archivoNombre}}
                                                        </a>
                                                    </h6>
                                                    {{/ifEquals}}
                                                {{/each}}
                                            </div>
                                        {{/if}}
                                        <div class="col-8 mt-3">
                                            <h5 class="font-light float-left">Fecha límite: 
                                                <i class="fas fa-calendar-alt ml-2"></i> {{fechaLimiteTarea}} 
                                                <i class="fas fa-clock"></i> {{horaLimiteTarea}}
                                            </h5>
                                        </div>
                                        <div class="col-4 text-right mt-3">
                                            <h4 class="font-light"> Entregas: <i class="fas fa-users"></i> {{entregas}}</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                        <!--Panel de Recursos-->
                        <div class="tab-pane p-20" id="recursos" role="tabpanel">
                            <!-- Busqueda-->
                            <nav class="navbar navbar-light bg-light justify-content-between">
                                <a class="navbar-brand">Recursos del Curso</a>
                                <form class="form-inline">
                                    <button type="button" class="btn waves-effect waves-light btn-info mr-2"
                                        data-toggle="modal" data-target="#agregarArchivos"><i
                                            class="fas fa-plus mr-2"></i>Agregar Archivos</button>
                                    <button type="button" class="btn waves-effect waves-light btn-info"
                                        data-toggle="modal" data-target="#agregarEnlace"><i
                                            class="fas fa-plus mr-2"></i>Agregar Enlace</button>
                                </form>
                            </nav>
                            <!--contenido-->
                            <div class="row mt-3">
                                <!-- RECURSOS DOCUMENTOS  -->
                                <div class="col-lg-6">
                                    <div class="card">
                                        <div class="card-header bg-info">
                                            <h4 class="mb-0 text-white">
                                                <i class="fas fa-folder-open"></i> Archivos <span class="small">({{totalDocumentos}})</span>
                                            </h4>
                                        </div>
                                        <div class="comment-widgets scrollable ps-container ps-theme-default ps-active-y">
                                            {{#each documentosCurso}}
                                            <div class="d-flex flex-row comment-row mt-0">
                                                <div class="comment-text w-100">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <h4>
                                                                <i class="fas fa-file-alt mr-2"></i><span class="font-weight-normal">{{nombreDocumento}}</span>
                                                            </h4>
                                                        </div>
                                                        <div class="col-md-6 text-right">
                                                            <a href="/ponente/DescargarArchivoCurso/{{idCurso}}/{{nombreDocumento}}" class="btn waves-effect waves-light btn-rounded btn-sm btn-info small">
                                                                <i class="fas fa-download"></i> Descargar
                                                            </a>
                                                            <button class="btn waves-effect waves-light btn-rounded btn-sm btn-danger small" data-toggle="modal" data-target="#EliminarArchivo{{idDocumento}}">
                                                                <i class="fas fa-times mr-2"></i> Eliminar
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            {{/each}}
                                        </div>
                                    </div>
                                </div>
                                <!-- RECURSOS LINKS  -->
                                <div class="col-lg-6">
                                    <div class="card">
                                        <div class="card-header bg-primary">
                                            <h4 class="mb-0 text-white">
                                                <i class="fas fa-link"></i> Links <span class="small">({{totalLinks}})</span>
                                            </h4>
                                        </div>
                                        <div class="comment-widgets scrollable ps-container ps-theme-default ps-active-y">
                                            {{#each linksCurso}}
                                            <div class="d-flex flex-row comment-row mt-0">
                                                <div class="comment-text w-100">
                                                    <div class="row">
                                                        <div class="col-md-8">
                                                            <h4>
                                                                <i class=" fas fa-link"></i> <a href="{{linkLink}}" class="font-weight-normal">{{nombreLink}}</a>
                                                            </h4>
                                                        </div>
                                                        <div class="col-md-4 text-right">
                                                            <a href="#"class="btn waves-effect waves-light btn-rounded btn-sm btn-success small mr-3" data-toggle="modal" data-target="#editarEnlace">
                                                                <i class="fas fa-pencil-alt mr-2"></i>Editar
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            {{/each}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
