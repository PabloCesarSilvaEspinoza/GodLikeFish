<div class="container-fluid">
    <div class="row">
        <!--primera columna-->
        <div class="col-md-12">
            <div class="card" style="border-radius: 10px">
                <div class="card-body">
                    <h3 class="card-title"><i class="fas fa-stream mr-2"></i>Historial de cursos <span class="small"> (01/01/2020 - 14/06/2021)</span></h3>
                    <hr>
                    <div class="table-responsive">
                        <table id="zero_config" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Nombre del Curso</th>
                                    <th>Alumnos</th>
                                    <th>Estado</th>
                                    <th>Fecha Inicio</th>
                                    <th>Fecha Fin</th>
                                    <th>% Aprobación</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each historialCursosPonente}}
                                <tr>
                                    <td>{{nombreCurso}}</td>
                                    <td>{{NumeroDeEstudiantes}}/{{capacidad}}</td>
                                    <td><span class="label label-info">
                                         {{Estado}}</span></td>
                                    <td> {{HoraInicio}}</td>
                                    <td> {{HorarioFin}}</td>
                                    <td>N/A</td>
                                    <td>
                                        <a href="#" class="btn waves-effect waves-light btn-rounded btn-sm btn-success small">
                                            <i class="fas fa-external-link-alt mr-2"></i>Ir al Curso</a> 
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Nombre del Curso</th>
                                    <th>Alumnos</th>
                                    <th>Estado</th>
                                    <th>Fecha Inicio</th>
                                    <th>Fecha Fin</th>
                                    <th>% Aprobación</th>
                                    <th>Acciones</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>