<div class="container-fluid">
    <!--modales-->
    {{#each modalEstudiante}}
    <div id="verPerfilEstudiante{{id}}" class="modal fade verEstPon">
        <div class="modal-dialog modal-xl">
            <div class="modal-content" style="border-radius: 10px">
                <!--Contenido-->
                <div class="modal-body">
                    <div class="row">
                        <!--titulo-->
                        <div class="col-md-3"></div>
                        <div class="col-md-6 text-center">
                            <h4>Perfil de Estudiante</h4>
                        </div>
                        <div class="col-md-3 text-right">
                            <button type="button" class="close" data-dismiss="modal"
                                aria-hidden="true">×</button>
                        </div>
                        <!--contenido-->
                        <div class="col-md-3 text-center">
                            <img src="../../assets/multimedia/usuarios/{{id}}/{{fotoURL}}" class="rounded-circle" width="150px" height="150px" />
                            <h6 class="mt-2 font-medium">Foto de Perfil</h6>
                        </div>
                        <div class="col-md-9">
                            <div class="row">
                                <div class="col-md-12">
                                    <h4><i class="fas fa-clipboard-list mt-3 mr-2"></i>Datos Generales</h4> <hr>
                                </div>
                                <div class="col-md-3 text-center">
                                    <h6 class="mb-0 font-medium mt-2">Matrícula</h6>
                                    <h5 class="font-16">{{matricula}}</h5>
                                </div>
                                <div class="col-md-6 text-center">
                                    <h6 class="mb-0 font-medium mt-2">Nombre</h6>
                                    <h5 class="font-16">{{nombres}}  {{pApellido}}</h5>
                                </div>
                                <div class="col-md-3 text-center">
                                    <h6 class="mb-0 font-medium mt-2">Area</h6>
                                    <h5 class="font-16">{{area}}</h5>
                                </div>
                                <div class="col-md-6 text-center">
                                    <h6 class="mb-0 font-medium mt-2">Puesto</h6>
                                    <h5 class="font-16">{{puesto}}</h5>
                                </div>
                                <div class="col-md-5 text-center">
                                    <h6 class="mb-0 font-medium mt-2">Correo</h6>
                                    <h5 class="font-16">{{correoUsuario}}</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    <!--terminan modales-->
    <div class="row">
        <!--primera columna-->
        <div class="col-md-12">
            <div class="card" style="border-radius: 10px">
                <div class="card-body">
                    <h3 class="card-title"><i class="fas fa-users mr-2"></i>Estudiantes inscritos en <span class="small">   Nombre Completo del Curso</span></h3>
                    <hr>
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item"> <a class="nav-link active" data-toggle="tab" style="color: rgb(62, 85, 105);" href="#home" role="tab">
                            <i class="fas fa-table mr-2"></i>Vista tabla</a> 
                        </li>
                        <li class="nav-item"> <a class="nav-link" data-toggle="tab" style="color: rgb(62, 85, 105);" href="#profile" role="tab">
                            <i class="fas fa-id-card-alt mr-2"></i>Vista Tarjeta</a> 
                        </li> 
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content tabcontent-border">
                        <div class="tab-pane active" id="home" role="tabpanel">
                            <div class="table-responsive p-20">
                                <table id="file_export"
                                    class="table table-striped table-bordered display">
                                    <thead>
                                        <tr>
                                            <th>Matricula</th>
                                            <th>Nombres</th>
                                            <th>Apellidos</th>
                                            <th>Puesto</th>
                                            <th>Area</th>
                                            <th>Asignaciones</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody> 
                                        {{#each estudiantes}}
                                        <tr>
                                            <td>{{matricula}}</td>
                                            <td>{{nombres}}</td>
                                            <td>{{pApellido}}</td>
                                            <td>{{puesto}}</td>
                                            <td>{{area}}</td>
                                            <td>8/8</td>
                                            <td>
                                                <button href="#" class="btn waves-effect waves-light btn-rounded btn-sm btn-success small" 
                                                data-toggle="modal" data-target="#verPerfilEstudiante{{id}}">
                                                    <i class="far fa-user mr-1"></i> 
                                                    Ver Perfil</button> 
                                            </td>
                                        </tr>
                                        {{/each}}
                                        
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Matricula</th>
                                            <th>Nombre</th>
                                            <th>Apellidos</th>
                                            <th>Puesto</th>
                                            <th>Area</th>
                                            <th>Asignaciones</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane  p-20" id="profile" role="tabpanel">
                            <div class="row">
                                <div class="input-group mb-3">
                                    <input id="BuscarPonente" name="BuscarPonente" type="text"
                                        class="form-control" placeholder="Buscar" aria-label=""
                                        aria-describedby="basic-addon1">
                                    <div class="input-group-append">
                                        <button id="buscarPonente" name="buscarPonente"
                                            class="btn btn-success" type="button">
                                            <i class="ti-search"></i></button> 
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="row el-element-overlay">
                                    {{#each estudiantes}}
                                    <div class="col-md-2"><!--Usar este para el each, los otros no tienen formato chido-->
                                        <div class="card">
                                            <div class="el-card-item" class="modal-footer"
                                                data-toggle="modal" data-target="#verPerfilEstudiante{{id}}">
                                                <div class="el-card-avatar el-overlay-1"> 
                                                    <img src="../../assets/multimedia/usuarios/{{id}}/{{fotoURL}}" class="rounded-circle" alt="user"/>
                                                    <div class="el-overlay">
                                                        <ul class="list-style-none el-info">
                                                            <a class="btn default btn-outline image-popup-vertical-fit el-link"
                                                                href="../../assets/images/users/d3.jpg"></a>
                                                        </ul>
                                                    </div>
                                                </div>
                                                <div class="el-card-content">
                                                    <h4 class="mb-0">{{nombres}}  {{pApellido}}</h4>
                                                    <span d="UsuarioArea" name="UsuarioArea" class="text-muted">{{puesto}}</span>
                                                    <br>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>