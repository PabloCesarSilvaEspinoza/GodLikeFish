<div class="container-fluid">
    <!-- modales -->
    {{#each usuariosSinVerificar}}
    <div id="verificarUsuario{{idUsuario}}" class="modal">
        <div class="modal-dialog">
            <div class="modal-content" style="border-radius: 10px">
                <div class="card-body">
                    <div class="row">
                        <!--titulo-->
                        <div class="col-md-1"></div>
                        <div class="col-md-10  text-center">
                            <h3>Verificar a<span class="small">{{nombreUsuario}}</span></h3>
                        </div>
                        <div class="col-md-1 text-right">
                            <button type="button" class="close" data-dismiss="modal"
                                aria-hidden="true">×</button>
                        </div>
                        <!--contenido-->
                        <div class="col-md-12">
                            <form action="#" method="post">
                                <div class="row">
                                    <div class="col-md-12 text-center mt-3">
                                        <h3 class="font-light mb-4">¿Quieres Verificar a este Usuario?</h3>
                                        <form action="../administrador/VerificarTarjetonUsuario" method="POST">
                                            <button type="submit" class="btn waves-effect waves-light btn-danger">
                                                <i class="fas fa-check mr-2"></i>Si, verificar</button>
                                            <button type="button" class="btn waves-effect waves-light btn-info" data-dismiss="modal">
                                                <i class="fas fa-times mr-2"></i>No, denegar acceso</button>
                                        </form>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    {{#each errores}}
        {{#if tipoProblema}}
        <div id="problema{{idProblema}}" class="modal">
            <div class="modal-dialog">
                <div class="modal-content" style="border-radius: 10px">
                    <div class="card-body">
                        <div class="row">
                            <!--titulo-->
                            <div class="col-md-1"></div>
                            <div class="col-md-10  text-center">
                                <h3>Problema <span class="small">{{idProblema}}</span></h3>
                            </div>
                            <div class="col-md-1 text-right">
                                <button type="button" class="close" data-dismiss="modal"
                                    aria-hidden="true">×</button>
                            </div>
                            <!--contenido-->
                            <div class="col-md-12">
                                <form action="#" method="post">
                                    <div class="row">
                                        <div class="col-md-12 text-center mt-3">
                                            <p class="font-medium mb-3" style="text-align: justify;">{{descripcionProblema}}</p>
                                            <form action="ResolverProblema/1" method="POST">
                                                <input type="hidden" name="idProblema"value="{{idProblemaUsuario}}">
                                                <button type="submit" class="btn waves-effect waves-light btn-danger">
                                                    <i class="fas fa-check mr-2"></i>Resuelto</button>
                                                <button type="button" class="btn waves-effect waves-light btn-info" data-dismiss="modal">
                                                    <i class="fas fa-times mr-2"></i>Cancelar</button>
                                            </form>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <div id="problema{{idProblema}}" class="modal">
            <div class="modal-dialog">
                <div class="modal-content" style="border-radius: 10px">
                    <div class="card-body">
                        <div class="row">
                            <!--titulo-->
                            <div class="col-md-1"></div>
                            <div class="col-md-10  text-center">
                                <h3>Problema <span class="small">{{idProblema}}</span></h3>
                            </div>
                            <div class="col-md-1 text-right">
                                <button type="button" class="close" data-dismiss="modal"
                                    aria-hidden="true">×</button>
                            </div>
                            <!--contenido-->
                            <div class="col-md-12">
                                <form action="#" method="post">
                                    <div class="row">
                                        <div class="col-md-12 text-center mt-3">
                                            <p class="font-medium mb-3" style="text-align: justify;">{{descripcionProblema}}</p>
                                            <form action="ResolverProblema/0" method="POST">
                                                <input type="hidden" name="idProblema"value="{{idProblemaUsuario}}">
                                                <button type="submit" class="btn waves-effect waves-light btn-danger">
                                                    <i class="fas fa-check mr-2"></i>Resuelto</button>
                                                <button type="button" class="btn waves-effect waves-light btn-info" data-dismiss="modal">
                                                    <i class="fas fa-times mr-2"></i>Cancelar</button>
                                            </form>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
    {{/each}}
    <!-- terminan modales -->
    <div class="row">
        <!-- primera columna -->
        <div class="col-md-3">
            <div class="card" style="border-radius: 10px">
                <div class="card-body">
                    <h3 class="card-title"><i class="fas fa-user-lock mr-2"></i>Usuarios No Verificados <span class="small"> (8)</span></h3><hr class="p-0">
                    <div class="comment-widgets scrollable ps-container ps-theme-default ps-active-y" style="height:730px;" data-ps-id="96370757-1752-5407-955d-d2618da54798">
                        <!-- Usuarios no verificados -->
                        {{#each usuariosSinVerificar}}
                        <div class="d-flex flex-row comment-row mt-0">
                            <!--<div class="p-2"><img src="../../assets/multimedia/usuarios/{{idUsuario}}/{{fotoUsuario}}" alt="user" width="50"class="rounded-circle"></div> FALTAAGREGAR-->
                            <div class="p-0"><img src="../../assets/images/users/1.jpg" alt="user" width="50" class="rounded-circle"></div>
                            <div class="comment-text w-100">
                                <h5 class=" mb-0">{{nombreUsuario}}</h5>
                                <h6 class="font-medium mt-0 mb-0">{{puestoUsuario}}</h6><!-- puesto -->
                                <h6 class="mt-0 ml-3"><i class="text-warning fas fa-hockey-puck mr-2"></i>Matrícula: <span class="font-light">{{matriculaUsuario}}</span></h6>
                                <span class="label label-rounded label-primary">{{areaUsuario}}</span>
                                <span class="label label-rounded label-warning">{{antiguedadUsuario}}</span>
                                <a href="/administrador/DescargarTarjetonUsuario/{{idUsuario}}/{{tarjetonUsuario}}"><span class="label label-rounded label-success">
                                    <i class="fas fa-download mr-2"></i>Tarjetón</span></a>
                                <div class="comment-footer">
                                    <span class="action-icons">
                                        <button class="btn btn-block btn-success btn-rounded btn-sm mt-1" data-toggle="modal" data-target="#verificarUsuario">
                                            <i class="fas fa-check mr-2"></i> Verificar
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        <div class="ps-scrollbar-x-rail" style="left: 0px; bottom: 0px;">
                            <div class="ps-scrollbar-x" tabindex="0" style="left: 0px; width: 0px;"></div>
                        </div>
                        <div class="ps-scrollbar-y-rail" style="top: 0px; right: 3px; height: 0px;">
                            <div class="ps-scrollbar-y" tabindex="0" style="top: 0px; height: 0px;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- columna central -->
        <div class="col-md-6">
            <div class="card" style="border-radius: 10px">
                <div class="card-body">
                    <h3 class="card-title"><i class="fas fa-chart-pie mr-2"></i>Estadisticas de tus Cursos <span class="small">(110)</span></h3><hr>
                    <div class="table-responsive" style="border-radius: 10px">
                        <table class="table table-hover table-warning">
                            <thead class="bg-warning text-white">
                                <tr>
                                    <th scope="col"><i class="fas fa-book mr-2"></i>Cursos por Area</th>
