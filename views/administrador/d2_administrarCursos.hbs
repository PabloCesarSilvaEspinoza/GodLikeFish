                                                    <input type="text" name="claveCurso" id="claveCurso" class="form-control" placeholder="000000000" autocomplete="off" required>
                                                    <small class="form-control-feedback ml-1"> Unicamente numeros </small> 
                                                </div>
                                            </div>
                                        </div>
                                        {{#fechaActual}}
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="row">
                                                    <div class="col-md-12 mt-3">
                                                        <h4><i class="fas fa-calendar-alt mr-2"></i>Calendario del curso</h4>
                                                        <hr>
                                                    </div>
                                                    <div class="col-md-6 col-lg-3">
